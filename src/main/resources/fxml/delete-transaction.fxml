<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:id="background_delete"
           fx:controller="com.example.financetracker.controller.DeleteTransactionController"
           prefWidth="1280" prefHeight="720"
           stylesheets="@../style/style.css">

    <VBox alignment="TOP_CENTER" spacing="60" style="-fx-padding: 30 0 30 0;">
        <Text text="Delete Transaction" style="-fx-font-size: 40px; -fx-fill: black; -fx-font-weight: bold" />
        <VBox styleClass="card" alignment="CENTER" spacing="40" maxWidth="1000">
            <HBox spacing="40" alignment="CENTER" >
                <ChoiceBox fx:id="fieldChoiceBox" />
                <TextField fx:id="valueField" promptText="Enter value"  maxWidth="400" prefWidth="400" prefHeight="40" styleClass="field"/>
                <Button fx:id="searchButton" text="Search" onAction="#handleSearchTransaction" defaultButton="true"  prefWidth="100" prefHeight="40" styleClass="button-back"/>
            </HBox>

            <TableView fx:id="resultTable" prefHeight="480" maxWidth="900">
                <columns>
                    <TableColumn fx:id="amountColumn" text="Amount" />
                    <TableColumn fx:id="dateColumn" text="Date" />
                    <TableColumn fx:id="categoryColumn" text="Category" />
                    <TableColumn fx:id="typeColumn" text="Type" />
                    <TableColumn fx:id="messageColumn" text="Message" />
                </columns>
            </TableView>

            <HBox alignment="CENTER" spacing="30" >
                <Button fx:id="deleteButton" text="Delete Selected" onAction="#handleDelete" prefHeight="40" styleClass="button-add"/>
                <Button fx:id="backButton" text="Back to Menu" onAction="#handleBacktoMenu" prefHeight="40" styleClass="button-back" />
            </HBox>
        </VBox>
    </VBox>
</StackPane>
